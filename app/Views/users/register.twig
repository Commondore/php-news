{% extends 'layouts/base.twig' %}

{% block content %}
<div class="max-w-7xl mx-auto">
    <h1 class="text-center text-4xl my-8">Регистрация</h1>

    <div class="max-w-1/3 mx-auto">
        <form action="/news.kg/register" method="post" novalidate>
            <div class="mb-4">
                <input class="input" type="text" name="name" placeholder="Введите имя" value="{{ name }}">
                {% if errors.name %}
                    <p class="text-red-600 text-sm mt-1 ml-2">{{ errors.name }}</p>
                {% endif %}
            </div>
            <div class="mb-4">
                <input class="input" type="email" name="email" placeholder="Введите email" value="{{ email }}">
                {% if errors.email %}
                    <p class="text-red-600 text-sm mt-1 ml-2">{{ errors.email }}</p>
                {% endif %}
            </div>
            <div class="mb-4">
                <input class="input" type="password" name="password" placeholder="Введите пароль">
                {% if errors.password %}
                    <p class="text-red-600 text-sm mt-1 ml-2">{{ errors.password }}</p>
                {% endif %}
            </div>
            <button class="btn w-full">Отправить</button>
        </form>
    </div>
</div>
{% endblock %}